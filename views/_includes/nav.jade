.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
    .container
        .navbar-header
            button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-collapse")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href=(user) ? "/cloud-sync" : "/")
                i(class='fa fa-cloud')  CloudSync!
        .collapse.navbar-collapse
            ul.nav.navbar-nav
                if (!user)
                    li
                        a(href=(title == 'Home') ? '#pricing' : '/#pricing')  Pricing
                    li
                        a(href=(title == 'Home') ? '#about' : '/#about')  About
                    li
                        a(href=(title == 'Home') ? '#newsletter' : '/#newsletter')  Newsletter
                    li
                        a(href=(title == 'Home') ? '#contact-us' : '/#contact-us')  Questions?
            ul.nav.navbar-nav.navbar-right
                if (!user)
                    li
                        a(href='/blog')  Blog
                    li
                        a.btn.btn-danger(href='/register')  Create Free Account
                    li
                        a(href='/login')  Login
                if (user)
                    li
                        a(href="/cloud-sync")
                            i(class='fa fa-cloud')  Start sync
                    li.dropdown
                        a.dropdown-toggle(href="#", data-toggle="dropdown")
                            i(class='fa fa-user') <b class="caret"></b>
                        span.dropdown-arrow
                        ul.dropdown-menu
                            li
                                a(href="/profile")
                                    i(class='fa fa-user')  Profile
                            li
                                a(href="/settings")
                                    i(class='fa fa-cogs')  Settings
                            li.divider
                            li
                                a(href="/logout")
                                    i(class='fa fa-sign-out')  Logout

