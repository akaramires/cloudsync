.user-details
    position relative
    padding 0
    margin 0 auto
    float none
    .user-image
        position relative
        z-index 1
        width 100%
        text-align center
        img
            clear both
            margin auto
            position relative
            max-width 150px

    .user-info-block
        z-index 0
        .user-heading
            width 100%
            text-align center
            margin 10px 0 0
        .navigation
            float left
            width 100%
            margin 0
            padding 0
            list-style none
            border-bottom 1px solid #428BCA
            border-top 1px solid #428BCA
            li
                float left
                margin 0
                padding 0
                a
                    padding 20px 30px
                    float left
                    width 100.5%
                    text-align center
                &.active
                    a
                        background #428BCA
                        color #fff

        .user-body
            float left
            padding 5%
            width 100%
            background #428bca
            .tab-content
                > div
                    float left
                    width 100%
                h4
                    width 100%
                    margin 10px 0

.image-preview-input
    position: relative;
    overflow: hidden;
    margin: 0px;
    color: #333;
    background-color: #fff;
    border-color: #ccc;
    &-title
        margin-left: 2px;
    input[type=file]
        position: absolute;
        top: 0;
        right: 0;
        margin: 0;
        padding: 0;
        font-size: 20px;
        cursor: pointer;
        opacity: 0;

.edit-user-form
    .user-photo
        clear both
        margin 0 auto
        position relative
        max-width 200px
        display block
